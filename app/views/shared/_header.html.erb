<div class="header">
  <div class="header-left">
    <div class="hedtit">
      <div class="title">
      <%= link_to '< Labor >', root_path,  class: "title-logo" %>
      </div>
      <div class="day">
      <%= Date.today%> <%= @wedays[Date.today.wday] %>
      </div>
    </div>
  </div>

  <div class="header-rigth">
    <ul class='lists-right'>
      <% if user_signed_in?%> 
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
        <li><%= link_to current_user.name,  labor_path(current_user), class: "user-name" %></li>  
      <%else%>    
        <li><%= link_to '新規登録',  new_user_registration_path, class: "sign-up" %></li>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <%end%>  
    </ul>
  </div>
</div>