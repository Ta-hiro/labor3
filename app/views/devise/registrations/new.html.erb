<%= render "shared/header"%> 
<div class="regist_main">
  <%= form_with model: @user, url: user_registration_path, class: 'registration-form', local: true do |f| %>
    <div class="regist">名前</div>
    <div>
    <%= f.text_field :name, class:"input-default", id:"name", placeholder:"例) サバ太郎", maxlength:"20" %>
    </div>
    <div class="regist">メールアドレス</div>
    <div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </div>
    <div class="regist">パスワード</div><div class="hoso">半角英数6文字以上,両方含む</div>
    <div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    </div>
    <div class="regist">パスワード（確認）</div>
    <div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
    </div>
    <div class='regist'>
    <%= f.submit "登録" ,class:"registration-btn" %>
    </div>
<%end%>
</div>
<%= render "shared/footer2"%> 